<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_grabarNuevoSonido"
        style="@android:style/Widget.TextView.PopupMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/tv_grabarNuevoSonido"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/txt_grabar_alertGrabarSonido"
        style="@android:style/Widget.TextView.PopupMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/tv_grabar"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_grabarNuevoSonido"
        app:layout_constraintStart_toStartOf="@+id/txt_grabarNuevoSonido"
        app:layout_constraintTop_toBottomOf="@+id/txt_grabarNuevoSonido"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/btn_grabarGrabacion"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_button_grabacion_off_background"
        android:contentDescription="@string/descripcion_botonGrabar"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="@+id/txt_grabar_alertGrabarSonido"
        app:layout_constraintStart_toStartOf="@+id/txt_grabar_alertGrabarSonido"
        app:layout_constraintTop_toBottomOf="@+id/txt_grabar_alertGrabarSonido"
        app:srcCompat="@drawable/ic_mic_off" />

    <TextView
        android:id="@+id/txt_pausar_alertGrabarSonido"
        style="@android:style/Widget.TextView.PopupMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/tv_pausar"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_grabarGrabacion"
        app:layout_constraintStart_toStartOf="@+id/btn_grabarGrabacion"
        app:layout_constraintTop_toBottomOf="@+id/btn_grabarGrabacion"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/btn_pausarGrabacion"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_button_grabacion_off_background"
        android:contentDescription="@string/descripcion_botonPausar"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="@+id/txt_pausar_alertGrabarSonido"
        app:layout_constraintStart_toStartOf="@+id/txt_pausar_alertGrabarSonido"
        app:layout_constraintTop_toBottomOf="@+id/txt_pausar_alertGrabarSonido"
        app:srcCompat="@drawable/ic_pause" />

    <TextView
        android:id="@+id/txt_reproducir_alertGrabarSonido"
        style="@android:style/Widget.TextView.PopupMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/tv_reproducir"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_pausarGrabacion"
        app:layout_constraintStart_toStartOf="@+id/btn_pausarGrabacion"
        app:layout_constraintTop_toBottomOf="@+id/btn_pausarGrabacion"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/btn_reproducirGrabacion"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/ic_button_grabacion_off_background"
        android:contentDescription="@string/descripcion_botonReproducir"
        android:scaleType="center"
        app:layout_constraintBottom_toTopOf="@+id/btn_cancelarGrabacion"
        app:layout_constraintEnd_toEndOf="@+id/txt_reproducir_alertGrabarSonido"
        app:layout_constraintStart_toStartOf="@+id/txt_reproducir_alertGrabarSonido"
        app:layout_constraintTop_toBottomOf="@+id/txt_reproducir_alertGrabarSonido"
        app:srcCompat="@drawable/ic_play" />

    <Button
        android:id="@+id/btn_cancelarGrabacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/btn_cancelar"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_aceptarGrabacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/btn_aceptar"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_cancelarGrabacion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_cancelarGrabacion" />

</androidx.constraintlayout.widget.ConstraintLayout>