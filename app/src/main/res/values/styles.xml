<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!--    CAMBIA EL COLOR DEL SWITCH EN SUS DIFERENTES ESTADOS    -->
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/color_primario</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#90808080
        </item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#40808080
        </item>
    </style>

    <style name="editText" parent="TextAppearance.AppCompat">
        <!--    CAMBIA EL COLOR DEL EDIT TEXT AL PRESIONAR SOBRE EL    -->
        <item name="android:textColorHint">#000000</item>
        <item name="colorControlActivated">@color/color_primario</item>
    </style>

    <style name="theme_barraDeNotificaciones" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--    CAMBIA EL COLOR DE LA BARRA DE NOTIFICACIONES    -->
        <item name="colorPrimaryDark">@color/color_primario</item>
    </style>

    <style name="layout_default" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="toolbarStyle">@color/color_primario</item>
    </style>

    <style name="Spinner" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/color_primario</item>
    </style>

    <style name="Global" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>