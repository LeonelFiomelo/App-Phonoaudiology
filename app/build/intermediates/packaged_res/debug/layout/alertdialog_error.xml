<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Global">

    <TextView
        android:id="@+id/txt_titulo_alertdialogError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/error_titulo"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_mensaje_alertdialogError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/error_mensaje"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_titulo_alertdialogError" />

    <TextView
        android:id="@+id/txt_respuesta_alertdialogError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textColor="@color/color_primario"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txt_mensaje_alertdialogError"
        app:layout_constraintStart_toStartOf="@+id/txt_mensaje_alertdialogError"
        app:layout_constraintTop_toBottomOf="@+id/txt_mensaje_alertdialogError" />

    <Button
        android:id="@+id/btn_aceptar_alertdialogError"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:text="@string/btn_continuar"
        android:textColor="@color/color_primario"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_respuesta_alertdialogError"
        app:layout_constraintStart_toStartOf="@+id/txt_respuesta_alertdialogError"
        app:layout_constraintTop_toBottomOf="@+id/txt_respuesta_alertdialogError" />
</androidx.constraintlayout.widget.ConstraintLayout>