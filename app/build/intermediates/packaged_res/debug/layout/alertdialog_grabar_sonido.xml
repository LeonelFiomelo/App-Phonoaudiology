<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView2"
        style="@android:style/Widget.TextView.PopupMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/tv_grabarNuevoSonido"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_grabar"
        style="@android:style/Widget.TextView.PopupMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/btn_grabar"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageButton
        android:id="@+id/btn_grabarGrabacion"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_button_grabacion_off_background"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="@+id/tv_grabar"
        app:layout_constraintStart_toStartOf="@+id/tv_grabar"
        app:layout_constraintTop_toBottomOf="@+id/tv_grabar"
        app:srcCompat="@drawable/ic_mic_off" />

    <TextView
        android:id="@+id/textView5"
        style="@android:style/Widget.TextView.PopupMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/btn_reproducir"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_grabarGrabacion"
        app:layout_constraintStart_toStartOf="@+id/btn_grabarGrabacion"
        app:layout_constraintTop_toBottomOf="@+id/btn_grabarGrabacion" />

    <ImageButton
        android:id="@+id/btn_reproducirGrabacion"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/ic_button_grabacion_off_background"
        android:scaleType="center"
        app:layout_constraintBottom_toTopOf="@+id/btn_cancelarGrabacion"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/ic_play" />

    <Button
        android:id="@+id/btn_cancelarGrabacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/btn_cancelar"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_aceptarGrabacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/btn_aceptar"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_cancelarGrabacion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_cancelarGrabacion" />

</androidx.constraintlayout.widget.ConstraintLayout>