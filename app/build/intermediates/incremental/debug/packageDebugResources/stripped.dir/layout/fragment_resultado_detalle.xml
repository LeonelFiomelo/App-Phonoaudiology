<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".infrastructure.ui.view.ResultadoDetalleFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_back"
            app:title="@string/tv_detalleDelResultado"
            app:titleTextColor="#FFFFFF" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_editor_absoluteX="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_puntuacion"
                    style="@android:style/Widget.TextView.PopupMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="32dp"
                    android:text="@string/tv_puntuacion"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_puntuacionOutput"
                    style="@android:style/Widget.TextView.PopupMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/ic_puntuacion_background"
                    android:gravity="center"
                    android:text="TextView"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/tv_puntuacion"
                    app:layout_constraintStart_toStartOf="@+id/tv_puntuacion"
                    app:layout_constraintTop_toBottomOf="@+id/tv_puntuacion" />

                <TextView
                    android:id="@+id/tv_fecha"
                    style="@android:style/Widget.TextView.PopupMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/tv_fecha"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_fechaOutput"
                    style="@android:style/Widget.TextView.PopupMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    app:layout_constraintStart_toStartOf="@+id/tv_fecha"
                    app:layout_constraintTop_toBottomOf="@+id/tv_fecha" />

                <TextView
                    android:id="@+id/tv_ejercicio"
                    style="@android:style/Widget.TextView.PopupMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@string/tv_ejercicio"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tv_fechaOutput"
                    app:layout_constraintTop_toBottomOf="@+id/tv_fechaOutput" />

                <TextView
                    android:id="@+id/tv_ejercicioOutput"
                    style="@android:style/Widget.TextView.PopupMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    app:layout_constraintStart_toStartOf="@+id/tv_ejercicio"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ejercicio" />

                <TextView
                    android:id="@+id/tv_categoria"
                    style="@android:style/Widget.TextView.PopupMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@string/tv_categoria"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tv_ejercicioOutput"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ejercicioOutput" />

                <TextView
                    android:id="@+id/tv_categoriaOutput"
                    style="@android:style/Widget.TextView.PopupMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    app:layout_constraintStart_toStartOf="@+id/tv_categoria"
                    app:layout_constraintTop_toBottomOf="@+id/tv_categoria" />

                <TextView
                    android:id="@+id/tv_ruido"
                    style="@android:style/Widget.TextView.PopupMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@string/tv_ruido"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tv_categoriaOutput"
                    app:layout_constraintTop_toBottomOf="@+id/tv_categoriaOutput" />

                <TextView
                    android:id="@+id/tv_ruidoOutput"
                    style="@android:style/Widget.TextView.PopupMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    app:layout_constraintStart_toStartOf="@+id/tv_ruido"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ruido" />

                <TextView
                    android:id="@+id/tv_intensidad"
                    style="@android:style/Widget.TextView.PopupMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@string/tv_intensidad"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tv_ruidoOutput"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ruidoOutput" />

                <TextView
                    android:id="@+id/tv_intensidadOutput"
                    style="@android:style/Widget.TextView.PopupMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    app:layout_constraintStart_toStartOf="@+id/tv_intensidad"
                    app:layout_constraintTop_toBottomOf="@+id/tv_intensidad" />

                <TextView
                    android:id="@+id/tv_errores"
                    style="@android:style/Widget.TextView.PopupMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@string/tv_errores"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tv_intensidadOutput"
                    app:layout_constraintTop_toBottomOf="@+id/tv_intensidadOutput" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </TableLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>